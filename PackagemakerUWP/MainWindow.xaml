<Window x:Class="PackagemakerUWP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Influent Package Maker (.iflapp) - Creador de Paquetes"
        Width="900"
        Height="700">

    <Grid Background="#212121">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#333333" Padding="20" BorderBrush="#424242" BorderThickness="0,0,0,1">
            <TextBlock Text="Influent Package Maker" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="#FFFFFF"
                      VerticalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="30">
            <StackPanel Spacing="20">
                
                <!-- Metadatos del Paquete -->
                <Border Background="#333333" 
                        CornerRadius="8" 
                        Padding="20" 
                        BorderBrush="#424242" 
                        BorderThickness="1">
                    <StackPanel Spacing="15">
                        <TextBlock Text="Metadatos del Paquete" 
                                  FontSize="18" 
                                  FontWeight="SemiBold" 
                                  Foreground="#FFFFFF" 
                                  Margin="0,0,0,10"/>
                        
                        <Grid ColumnSpacing="15" RowSpacing="15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Empresa -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                      Text="Empresa (Publisher):" 
                                      Foreground="#CCCCCC" 
                                      VerticalAlignment="Center"/>
                            <TextBox x:Name="EmpresaTextBox" 
                                    Grid.Row="0" Grid.Column="1" 
                                    Text="MiEmpresa" 
                                    Background="#424242" 
                                    Foreground="#FFFFFF" 
                                    BorderBrush="#555555"
                                    Padding="10"/>

                            <!-- Nombre Lógico -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                      Text="Nombre Lógico (Script):" 
                                      Foreground="#CCCCCC" 
                                      VerticalAlignment="Center"/>
                            <TextBox x:Name="NombreLogicoTextBox" 
                                    Grid.Row="1" Grid.Column="1" 
                                    Text="MiApp" 
                                    Background="#424242" 
                                    Foreground="#FFFFFF" 
                                    BorderBrush="#555555"
                                    Padding="10"/>

                            <!-- Nombre Completo -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                      Text="Nombre Completo (Título):" 
                                      Foreground="#CCCCCC" 
                                      VerticalAlignment="Center"/>
                            <TextBox x:Name="NombreCompletoTextBox" 
                                    Grid.Row="2" Grid.Column="1" 
                                    Text="Mi Aplicación de Ejemplo" 
                                    Background="#424242" 
                                    Foreground="#FFFFFF" 
                                    BorderBrush="#555555"
                                    Padding="10"/>

                            <!-- Versión -->
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                      Text="Versión:" 
                                      Foreground="#CCCCCC" 
                                      VerticalAlignment="Center"/>
                            <TextBox x:Name="VersionTextBox" 
                                    Grid.Row="3" Grid.Column="1" 
                                    Text="1.0.0" 
                                    Background="#424242" 
                                    Foreground="#FFFFFF" 
                                    BorderBrush="#555555"
                                    Padding="10"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Botón de Creación -->
                <Button x:Name="CreateButton" 
                       Content="Crear Estructura de Proyecto" 
                       Click="CreateButton_Click"
                       Background="#29b6f6" 
                       Foreground="#000000" 
                       FontWeight="Bold" 
                       FontSize="14"
                       Padding="20,12" 
                       CornerRadius="5"
                       HorizontalAlignment="Stretch"
                       BorderThickness="0"/>
                
                <!-- Estado de Conexión -->
                <Border Background="#333333" 
                        CornerRadius="5" 
                        Padding="15" 
                        BorderBrush="#424242" 
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Ellipse x:Name="ConnectionStatusIndicator" 
                                Width="12" 
                                Height="12" 
                                Fill="#ffd54f" 
                                VerticalAlignment="Center"/>
                        <TextBlock x:Name="ConnectionStatusText" 
                                  Text="Verificando conexión..." 
                                  Foreground="#CCCCCC" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#333333" 
                Padding="15,10" 
                BorderBrush="#424242" 
                BorderThickness="0,1,0,0">
            <TextBlock Text="Influent Package Maker - Creador de Paquetes .iflapp" 
                      Foreground="#999999" 
                      FontSize="12" 
                      VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>

